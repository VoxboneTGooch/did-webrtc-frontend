extends layout

append head
  link(rel="stylesheet" href="/lib/country-select-js/build/css/countrySelect.min.css")
  link(rel="stylesheet" href="/lib/flag-icon-css/css/flag-icon.min.css")
  script.
    require(
      ['domReady', 'angular', 'bootstrap'],
      function (domReady, angular) {
        domReady(function () {
          angular.module('voxconf-frontend', []);
          angular.bootstrap(document, ['voxconf-frontend']);
        });
    });

block content
  body
    .body
      .site-wrapper-inner.home-wrap
        .container
            .register-content.ng-cloak
              h4 Selected DID Numbers
              p These DID numbers are tied to your conferencing bridge. Please #[a(target="_blank" href="mailto:workshop@voxbone.com?subject=Conferencing%20change%20numbers") contact us] for changes or additional numbers.
              hr
              .cnt-select-container
                .cnt-picker
                  .well.bridge-number Your bridge 1st DID #:
                    span.fa.fa-globe(ng-show=`'${dids[0].country_iso2}' == 'wld'`)
                    div.flag-icon(ng-hide=`'${dids[0].country_iso2}' == 'wld'` class=`flag-icon-${dids[0].country_iso2}`)
                    |&nbsp; #{dids[0].did_number}
                if dids[1]
                  .cnt-picker
                    .well.bridge-number Your bridge 2nd DID #:
                      span.fa.fa-globe(ng-show = `'${dids[1].country_iso2}' == 'wld'`)
                      div.flag-icon(ng-hide = `'${dids[1].country_iso2}' == 'wld'` class=`flag-icon-${dids[1].country_iso2}`)
                      | &nbsp; #{dids[1].did_number}
                br
                a(href="/edit-notifications")
                  button.btn.btn-default-custom(type="button") Edit Notifications
              .row
                .bottom-note Need more numbers or more countries #[a(target="_blank" href="https://www.voxbone.com/coverage/voip-coverage") full list]? #[a(target="_blank" href="mailto:workshop@voxbone.com?subject=Conferencing") Contact Us]
